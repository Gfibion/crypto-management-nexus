{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/about", "destination": "/index.html" },
    { "source": "/services", "destination": "/index.html" },
    { "source": "/portfolio", "destination": "/index.html" },
    { "source": "/articles", "destination": "/index.html" },
    { "source": "/articles/:slug*", "destination": "/index.html" },
    { "source": "/education", "destination": "/index.html" },
    { "source": "/chat", "destination": "/index.html" },
    { "source": "/donate", "destination": "/index.html" },
    { "source": "/profile", "destination": "/index.html" },
    { "source": "/auth", "destination": "/index.html" },
    { "source": "/admin", "destination": "/index.html" },
    { "source": "/((?!api|_next|static|favicon\\.ico|.*\\..*).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}