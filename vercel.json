{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "https://plnoqiktsyqwcwzlueri.supabase.co/functions/v1/sitemap" },
    { "source": "/about", "destination": "/index.html" },
    { "source": "/services", "destination": "/index.html" },
    { "source": "/portfolio", "destination": "/index.html" },
    { "source": "/articles", "destination": "/index.html" },
    { "source": "/articles/:slug", "destination": "/index.html" },
    { "source": "/education", "destination": "/index.html" },
    { "source": "/chat", "destination": "/index.html" },
    { "source": "/donate", "destination": "/index.html" },
    { "source": "/profile", "destination": "/index.html" },
    { "source": "/auth", "destination": "/index.html" },
    { "source": "/admin", "destination": "/index.html" },
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
